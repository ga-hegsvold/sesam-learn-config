{
  "_id": "hubspot-company-person-enrich",
  "type": "pipe",
  "source": {
    "type": "dataset",
    "dataset": "hubspot-company-enrich"
  },
  "transform": {
    "type": "dtl",
    "rules": {
      "default": [
        ["comment", "Create a new entity for each NI."],
        ["comment", "TODO: Handle lists of NIs."],
        ["create",
          ["filter",
            ["is-not-null", "_."],
            ["map",
              ["if",
                ["and",
                  ["is-ni", "_.value"],
                  ["matches", "*global-person*",
                    ["ni-ns", "_.value"]
                  ],
                  ["eq", "ni",
                    ["last",
                      ["split", "-", "_.key"]
                    ]
                  ]
                ],
                ["dict", "_id",
                  ["concat",
                    ["ni-ns", "_.value"], ":",
                    ["ni-id", "_.value"]
                  ], "rdf:type",
                  ["ni",
                    ["replace", "hubspot-", "hubspot:",
                      ["ni-ns", "_.value"]
                    ]
                  ],
                  ["concat",
                    ["ni-ns", "_.value"], ":value"],
                  ["ni-id", "_.value"]
                ]
              ],
              ["key-values", "_S."]
            ]
          ]
        ],
        ["discard"]
      ]
    }
  }
}
